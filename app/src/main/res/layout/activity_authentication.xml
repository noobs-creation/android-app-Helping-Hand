<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthenticationActivity"
    android:background="@drawable/images">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#CAEAFD">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView_authentication_logo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/logor"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView_EditDetails_profilePic"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/relativeLayout"
        android:layout_marginTop="-50dp"
        android:background="@drawable/waves" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_EditDetails_profilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Please Enter your phone number!"
        android:fontFamily="sans-serif-smallcaps"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#07264A" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:orientation="horizontal"
        android:padding="15dp">

        <Spinner
            android:id="@+id/spinnerCountries"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:textSize="12dp"
            android:background="@drawable/editbox"
            android:backgroundTint="#EAC4D5DD"
            android:backgroundTintMode="src_in"
            android:textAlignment="gravity"
            android:digits="0123456789"
            android:hint="enter your number"
            android:inputType="number"
            android:maxLength="10" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/linearLayout"
        android:layout_centerHorizontal="true"
        android:background="#2863AA"
        android:text="Continue  >"
        android:textAllCaps="false"
        android:textColor="#ffffff" />

</RelativeLayout>